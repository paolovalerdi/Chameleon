<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <bool name="isLightNavigationEnabled">false</bool>
    <color name="colorBackground">@color/darkColorBackground</color>
    <color name="colorBackgroundFloating">@color/darkColorBackgroundFloating</color>
    <color name="colorSurface">@color/darkColorSurface</color>
    <color name="primaryTextColor">@color/darkPrimaryTextColor</color>
    <color name="secondaryTextColor">@color/darkSecondaryTextColor</color>
    <color name="colorAccent">@color/darkColorAccent</color>
    <color name="colorPrimary">@color/darkPrimaryColor</color>
    <color name="colorError">@color/darkColorError</color>

    <style name="Theme.Base.Chameleon.SplashScreenTheme.Amoled" parent="Theme.Base.Chameleon.SplashScreenTheme">
        <item name="android:colorBackground">@color/amoledColorBackground</item>
        <item name="android:statusBarColor">@color/amoledColorBackground</item>
        <item name="android:navigationBarColor">@color/amoledColorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/isLightNavigationEnabled
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">
            @bool/isLightNavigationEnabled
        </item>
        <item name="colorBackgroundFloating">@color/amoledColorBackgroundFloating</item>
        <item name="colorSurface">@color/amoledColorSurface</item>
        <item name="android:textColorPrimary">@color/amoledPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/amoledSecondaryTextColor</item>
        <item name="colorAccent">@color/amoledColorAccent</item>
        <item name="colorPrimary">@color/amoledPrimaryColor</item>
        <item name="colorError">@color/amoledColorError</item>
    </style>

</resources>